<div class="form-group">
    @Html.Label("фильтр по датам")
    <br />
    @Html.Label("Начальная дата", new { @class = "control-label col-md-2" })
    <div id="dateFrom">
        @Html.Editor("textboxDateFrom", null, new { htmlAttributes = new { @class = "add-on", @PlaceHolder = "введите дату" } })
    </div>
    <br />
    @Html.Label("Конечная дата", new { @class = "control-label col-md-2" })
    <div id="dateTo">
        @Html.Editor("textboxDateTo", null, new { htmlAttributes = new { @class = "add-on", @PlaceHolder = "введите дату" } })
    </div>
</div>

<script type="text/javascript"
        src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
</script>
<script type="text/javascript"
        src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js">
</script>
<script type="text/javascript"
        src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
</script>
<script type="text/javascript"
        src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js">
</script>

<script type="text/javascript">
    $('#dateFrom').datetimepicker({
        format: 'dd-MM-yyyy',
        pickTime: false
    });
</script>
<script type="text/javascript">
    $('#dateTo').datetimepicker({
        format: 'dd-MM-yyyy',
        pickTime: false
    });
</script>

