@model IList<Contract.FemaleParrentsMale>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Самки</title>
</head>
<body>
    <div>
        <h2>Самки</h2>
        @Html.ActionLink("Добавить", "AddFemale")
        <hr />
        <table>
            @if (Model.Count != 0)
            {
                <tr style="font-weight: bold">
                    <td>
                        @Html.Label("Кличка")
                    </td>
                    <td>
                        @Html.Label("Дата рождения")
                    </td>
                    <td>
                        @Html.Label("Клетка")
                    </td>
                    <td>
                        @Html.Label("Отец1")
                    </td>
                    <td>
                        @Html.Label("Отец2")
                    </td>
                    <td>
                        @Html.Label("Мать")
                    </td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.FemaleName, "ShowProfile", new { femaleId = item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.CageName)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.FatherName1)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.FatherName2)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.MotherName)
                    </td>
                </tr>
            }
        </table>
    </div>
    <br />
    <p>
        @Html.ActionLink("На главную", "Index", "Home")
    </p>
</body>
</html>
